<div class="front-page">
  <div class="row">

    <%# List of collections from CollectionHelper  %>
    <% highlighted_collections.each do |collection| %>
        <div class="col-md-4 col-sm-6">
          <figure>
            <a href="/?f%5Bmods_relatedItem_type_host_collectionFacet_ms%5D%5B%5D=<%= collection[:facet_val] %>">
              <img src="<%= collection[:img] %>" alt="<%= collection[:title] %>"/></a>
            <figcaption class="caption">
              <a href="/?f%5Bmods_relatedItem_type_host_collectionFacet_ms%5D%5B%5D=<%= collection[:facet_val] %>">
                <%= collection[:title] %>
              </a></figcaption>
          </figure>
        </div>
    <% end %>
  </div>
</div>

<script>
  $(function () {
    $('#about a').on('click', function (e) {
      e.preventDefault();

      if ($('#about-content').html() == "") {
        $('#about-content').load($(this).attr("href"), function () {
          $('#about-content').show();
        });
      } else {
        $('#about-content').toggle();
      }
    });
  });
</script>
